{
    "name": "omnifraud/common",
    "description": "Core components for the Omnifraud PHP fraud prevention library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "LXRandCo",
            "email": "hugo.v@lxrco.com"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Omnifraud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "lint": [
            "phpcs --standard=PSR2 src"
        ]
    }
}
